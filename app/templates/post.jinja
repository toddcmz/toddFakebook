{% extends 'base.jinja' %}

{% block content %}

    <h3>Publish a post</h3>
    <form action="", method ="post">    
        {{ form.hidden_tag() }}
        <p>
            {{ form.body.label}}<br>
            {{ form.body(size=50)}}
            {% for error in form.body.errors %} 
                <span class="err-msg">{{ error }}</span>
            {% endfor %}
        </p>
        <p>
            {{ form.submit() }}
        </p>
    </form>
    
{% endblock %}